<?xml version="1.0"?>
 
<addon scheme='2.0'>
  <id>yotpo</id>
  <version>1.0</version> 
  <name>Yotpo</name>
  <description>Yotpo descritpion</description>
  <priority>100500</priority>
  <default_language>EN</default_language>
  <status>active</status>
  <language_variables>
	<item lang="EN" id="block_widget">Yotpo widget</item>
	<item lang="EN" id="block_widget_description">Add Yotpo widget</item>
  </language_variables>

  	<settings layout="separate">
	<sections>
		<section id="signup">
			<name>Signup</name>
			<items>
				<item id="yotpo_signup_header">
					<name>Create your Yotpo account</name>
					<type>header</type>
				</item>
				<item id="yotpo_user_email">
					<name>Email address</name>
					<type>input</type>
				</item>

				<item id="yotpo_user_name">
					<name>Name</name>
					<type>input</type>
				</item>

				<item id="yotpo_user_password">
					<name>Password</name>
					<type>password</type>
				</item>

				<item id="yotpo_user_confirm_password">
					<name>Confirm password</name>
					<type>password</type>
				</item>
			</items>
		</section>
		<section id="settings">
			<name>Settings</name>
			<items>
				<item id="yotpo_app_key">
					<name>App key</name>
					<type>input</type>
				</item>

				<item id="yotpo_secret_token">
					<name>Secret token</name>
					<type>input</type>
				</item>

				<item id="yotpo_mail_after_purchase">
					<name>Mail after purchase</name>
					<type>checkbox</type>
					<default_value>Y</default_value>
				</item>
			</items>
		</section> 	
		<section id="costumize">
			<name>Costumize</name>
			<items>
				<item id="yotpo_links">
					<name>Costumize your account</name>
					<type>info</type>
					<handler>fn_yotpo_login_link</handler>
				</item>
			</items>
		</section> 	
	</sections>
	</settings>
</addon>